<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:selectableItemBackground"
    android:focusable="true"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="4dp"
    app:cardElevation="3dp"
    app:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_expense_item_date"
            style="@style/AppTextViewCenter"
            android:textStyle="bold|italic"
            android:textColor="@color/colorBlue"
            android:background="@color/colorGrayLight"
            android:hint="Expense Date"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_expense_item_type"
                style="@style/AppTextViewDefault"
                android:layout_width="0dp"
                android:layout_weight="0.6"
                android:hint="Expense Type" />

            <TextView
                android:id="@+id/tv_expense_item_amount"
                style="@style/AppTextViewDefault"
                android:gravity="end"
                android:layout_width="0dp"
                android:layout_weight="0.4"
                android:hint="amount" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_expense_item_description"
            style="@style/AppTextViewSmall"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="10dp"
            android:hint="description" />

        <TextView
            android:id="@+id/tv_expense_item_create_date"
            style="@style/AppTextViewSmall"
            android:textSize="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="6dp"
            android:gravity="end"
            android:textColor="@color/colorAccent"
            android:text="05 Dec, 2018"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>