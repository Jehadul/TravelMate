    <style name="AppButtonDefault" parent="AppLargeText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_margin">6dp</item>
        <item name="android:background">@drawable/button_default_bg</item>
    </style>

    <style name="AppButtonSuccess" parent="AppButtonDefault">
        <item name="android:background">@drawable/button_success_bg</item>
    </style>

    <style name="AppButtonDanger" parent="AppButtonDefault">
